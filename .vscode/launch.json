{
    "configurations": [
        {
            "name": "attach to openssl using gdb(root)",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/apps/openssl",
            "MIMode": "gdb",
            "miDebuggerPath": "/home/jonesn/bin/gdb-root.sh",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "openssl (lldb)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/apps/openssl",
            "args": ["engine","-c", "qatengine"],
            "cwd": "${workspaceFolder}",
            "env": { "OPENSSL_CONF": "/home/jonesn/etc/openssl.cnf", "LD_LIBRARY_PATH": ".", "OPENSSL_TEST_PAUSE_FOR_ATTACH": "1"}
        },
